  "dependencies": {
    "apollo-server": "^2.19.1",
    "apollo-server-testing": "^2.19.1",
    "dotenv": "^8.2.0",
    "dynamoose": "^2.5.0",
    "graphql": "^15.4.0",
    "request-ip": "^2.1.3",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "@types/accepts": "^1.3.5",
    "@types/dotenv": "^8.2.0",
